@inherits AttachmentComponent

<div class="instagram-container">
    <iframe
        class="instagram-embed"
        src="@Attachment.Location"
        width="@(Attachment.Width > 0 ? Attachment.Width : 400)"
        height="@(Attachment.Height > 0 ? Attachment.Height : 480)"
        frameborder="0"
        scrolling="no"
        allowtransparency="true">
    </iframe>
</div>

<style>
    .instagram-container {
        max-width: 400px;
        border-radius: 8px;
        overflow: hidden;
    }

    .instagram-embed {
        border: none;
        border-radius: 8px;
    }
</style>
