<Project Sdk="Microsoft.NET.Sdk.Razor">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <ImplicitUsings>true</ImplicitUsings>
    <DebugType>portable</DebugType>
    <WasmEnableSIMD>false</WasmEnableSIMD>
    <WasmBuildNative>true</WasmBuildNative>
    <!-- Fix trimming issue -->
    <_ExtraTrimmerArgs>--keep-metadata parametername</_ExtraTrimmerArgs>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ExCSS" Version="4.3.1" />
    <PackageReference Include="FastDragBlazor" Version="1.0.6" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly" Version="10.0.3" />
    <PackageReference Include="Microsoft.AspNetCore.Components.WebAssembly.DevServer" Version="10.0.3" PrivateAssets="all" />
    <PackageReference Include="Microsoft.AspNetCore.WebUtilities" Version="10.0.3" />
    <PackageReference Include="Microsoft.Extensions.Http" Version="10.0.3" />
    <PackageReference Include="Microsoft.Extensions.ObjectPool" Version="10.0.3" />
    <PackageReference Include="Microsoft.TypeScript.MSBuild" Version="5.9.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Valour.Markdig.Blazor" Version="1.2.0" />
    <PackageReference Include="Valour.TenorTwo" Version="1.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Sdk\Valour.Sdk.csproj" />
    <ProjectReference Include="..\Shared\Valour.Shared.csproj" />
  </ItemGroup>

  <PropertyGroup>
    <PrepareForBuildDependsOn>GetTypeScriptOutputForPublishing;$(PrepareForBuildDependsOn)</PrepareForBuildDependsOn>
  </PropertyGroup>

  <ItemGroup>
    <TypeScriptCompile Remove="wwwroot\blazorTypes.ts" />
    <TypeScriptCompile Remove="Components\Menus\Modals\Users\Edit\EditWalletComponent.razor.ts" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Components\Menus\Modals\Users\Edit\ConnectToWallet.js">
      <DependentUpon>EditUserComponent.razor</DependentUpon>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Content Update="Components\Menus\Modals\Users\Edit\EditWalletComponent.js">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      <DependentUpon>EditWalletComponent.razor</DependentUpon>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <AdditionalFiles Include="Components\PlanetDiscovery\DiscoveryPageComponent.razor" />
    <AdditionalFiles Include="Components\PlanetDiscovery\DiscoveryPlanetCard.razor" />
  </ItemGroup>
  
  <!-- JS Cleanup script
  <Target Name="RunCustomBuildScripts" BeforeTargets="PrepareForBuild">
    <Exec Condition=" '$(OS)' == 'Windows_NT' " Command="dotnet tool list -g | findstr dotnet-script || dotnet tool install -g dotnet-script" />
    <Exec Condition=" '$(OS)' != 'Windows_NT' " Command="dotnet tool list -g | grep dotnet-script || dotnet tool install -g dotnet-script" />
    <Exec Command="dotnet script ./BuildScripts/CleanupJs.csx" />
  </Target>
  -->

  <!-- Build-time CSS bundling: concatenates static CSS files into a single bundled.css -->
  <UsingTask TaskName="BundleCssFiles" TaskFactory="RoslynCodeTaskFactory" AssemblyFile="$(MSBuildToolsPath)/Microsoft.Build.Tasks.Core.dll">
    <ParameterGroup>
      <InputFiles ParameterType="Microsoft.Build.Framework.ITaskItem[]" Required="true" />
      <OutputFile ParameterType="System.String" Required="true" />
    </ParameterGroup>
    <Task>
      <Code Type="Fragment" Language="cs"><![CDATA[
var sb = new System.Text.StringBuilder();
sb.AppendLine("/* Auto-generated CSS bundle - do not edit directly */");
foreach (var item in InputFiles)
{
    var path = item.ItemSpec;
    if (!System.IO.File.Exists(path))
    {
        Log.LogWarning("CSS bundle: file not found: " + path);
        continue;
    }
    sb.AppendLine("/* --- " + System.IO.Path.GetFileName(path) + " --- */");
    sb.AppendLine(System.IO.File.ReadAllText(path));
}
System.IO.File.WriteAllText(OutputFile, sb.ToString());
Log.LogMessage(MessageImportance.High, "CSS bundle generated: " + OutputFile);
      ]]></Code>
    </Task>
  </UsingTask>

  <Target Name="GenerateCssBundle"
          BeforeTargets="ResolveProjectStaticWebAssets"
          Inputs="wwwroot/css/reboot.min.css;wwwroot/css/app.css;wwwroot/css/globals.css;wwwroot/css/bootstrap-icons.css;wwwroot/css/hljs-theme.min.css;wwwroot/css/pickr.min.css;wwwroot/css/driver.min.css"
          Outputs="wwwroot/css/bundled.css">
    <ItemGroup>
      <CssBundleInput Include="$(MSBuildProjectDirectory)/wwwroot/css/reboot.min.css" />
      <CssBundleInput Include="$(MSBuildProjectDirectory)/wwwroot/css/app.css" />
      <CssBundleInput Include="$(MSBuildProjectDirectory)/wwwroot/css/globals.css" />
      <CssBundleInput Include="$(MSBuildProjectDirectory)/wwwroot/css/bootstrap-icons.css" />
      <CssBundleInput Include="$(MSBuildProjectDirectory)/wwwroot/css/hljs-theme.min.css" />
      <CssBundleInput Include="$(MSBuildProjectDirectory)/wwwroot/css/pickr.min.css" />
      <CssBundleInput Include="$(MSBuildProjectDirectory)/wwwroot/css/driver.min.css" />
    </ItemGroup>
    <BundleCssFiles InputFiles="@(CssBundleInput)" OutputFile="$(MSBuildProjectDirectory)/wwwroot/css/bundled.css" />
  </Target>

</Project>
