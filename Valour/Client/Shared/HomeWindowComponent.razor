@code {

    [Parameter]
    public HomeWindow Window { get; set; }

    [Parameter]
    public EventCallback<ClientWindow> RefreshWindow { get; set; }

    public async Task OnNewPlanetClick()
    {
        navManager.NavigateTo("createplanet");
    }

    public async Task OnPlanetClick(ClientPlanet planet)
    {
        PlanetChatChannel channel = await planet.GetPrimaryChannelAsync();

        Console.WriteLine($"Switching window {Window.Index} to {channel.Name}");
        ClientWindowManager.SetWindow(Window.Index, new ChatChannelWindow(Window.Index, channel));

        StateHasChanged();
        await RefreshWindow.InvokeAsync(ClientWindowManager.GetWindow(Window.Index));
    }
}
